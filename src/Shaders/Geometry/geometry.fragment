#version 330 core

layout (location = 0) out vec4 Position;
layout (location = 1) out vec4 Normal;
layout (location = 2) out vec4 Albedo;
layout (location = 3) out vec4 UseLight;

in VS_OUT {
	vec3 FragPos;
	vec4 Color;
	float Depth;
} fs_in;



void main() {
	Albedo = fs_in.Color;
	Position = vec4(fs_in.FragPos, 1.0);
	Normal = vec4(vec3(0.0), 1.0);
	UseLight = vec4(0.0, fs_in.Depth, 0.0, 1.0);
}
