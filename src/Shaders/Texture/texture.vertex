#version 330 core

layout (location = 0) in vec3 position;
layout (location = 1) in vec2 texCoords;

mat4 view;
mat4 projection;
mat4 model;

out vec2 TexCoords;

void main() {
	gl_Position = projection * view * model * vec4(position.x, position.y, position.z, 1.0f);
	TexCoords = texCoords;
}