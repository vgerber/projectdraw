#version 330 core
layout (location = 0) in vec4 vertex; //2x pos + 2x tex
out vec2 TexCoords;

layout (std140) uniform Matrices {
	uniform mat4 view;
	uniform mat4 projection;
};

uniform mat4 model;

void main() {
	gl_Position = projection * view * model * vec4(vertex.xy, 0.0, 1.0);
	TexCoords = vertex.zw;
}